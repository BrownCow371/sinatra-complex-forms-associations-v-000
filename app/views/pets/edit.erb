<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">

  <br></br>

  <label>Choose an existing owner:</label>
    <%@owners.each do |owner|%>
    <input type="checkbox" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>" <%='checked' if @pet.owner == owner%>> <%=owner.name%></input>
    <%end%>
    <!-- <%Pet.all.each do |pet|%>
    <input type="checkbox" name="owner[pet_ids][]" id="<%= pet.id%>" value="<%=pet.id%>" <%='checked' if @owner.pets.include?(pet) %>><%=pet.name%></input>
    <%end%> -->

    <br></br>
    <label>and/or, create a new owner:</label>
    <br></br>
     <label>name:</label>
       <input  type="text" id="owner_name" name="owner[name]"></input>
     <br></br>
  <input type="submit" value="Update Pet">
</form>
